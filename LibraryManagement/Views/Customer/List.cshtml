@using LibraryManagement.ViewModels;
@model IEnumerable<CustomerViewModel>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Customer" asp-action="Create"> Create new customer </a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Borrowed Books Count</th>
            <th>Ammend Customer</th>
        </tr>
    </thead>
        <tbody>
            @foreach(var customerVM in Model)
            {
            <tr>
                <td>@customerVM.Customer.CustomerID</td>
                <td>@customerVM.Customer.Name</td>
                <td>@customerVM.BookCount</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-info" asp-area="" asp-controller="Customer" asp-action="Update" asp-route-id="@customerVM.Customer.CustomerID">Edit</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Customer" asp-action="Delete" asp-route-id="@customerVM.Customer.CustomerID">Delete</a>

                    </div>
                </td>
            </tr>
            }
        </tbody>
</table>