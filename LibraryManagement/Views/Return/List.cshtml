@model IEnumerable<Book>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Authors name</th>
            <th>Borrower Name</th>
            <th>Return</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model)
        {
            <tr>
                <td>@book.BookID</td>
                <td>@book.Title</td>
                <td>@book.Author.Name</td>
                <td>@book.Borrower.Name</td>
                <td><a class="btn btn-success" asp-area="" asp-controller="Return" asp-action="ReturnABook" asp-route-BookID="@book.BookID">Return</a></td>
            </tr>
        }
    </tbody>
</table>